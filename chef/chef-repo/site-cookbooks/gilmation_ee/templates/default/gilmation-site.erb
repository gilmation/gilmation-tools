<VirtualHost *:80>
  ServerName    <%= @node[:gilmation][:domain_name] %>.<%= @node[:gilmation][:domain] %>
  DocumentRoot  <%= @node[:gilmation][:webroot] %>/current
  <Directory <%= @node[:gilmation][:webroot] %>/current>
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

<VirtualHost *:80>
  ServerName  www.<%= @node[:gilmation][:domain_name] %>.<%= @node[:gilmation][:domain] %>
  RedirectMatch permanent ^/(.*) http://<%= @node[:gilmation][:domain_name] %>.<%= @node[:gilmation][:domain] %>/$1
</VirtualHost>
