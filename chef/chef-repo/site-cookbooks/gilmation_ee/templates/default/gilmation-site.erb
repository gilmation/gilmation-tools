<VirtualHost *:80>
  ServerName    www.<%= @node[:gilmation][:domain_name] %>.<%= @node[:gilmation][:domain] %>
  ServerAlias   <%= @node[:gilmation][:domain_name] %>.<%= @node[:gilmation][:domain] %> *.<%= @node[:gilmation][:domain_name] %>.<%= @node[:gilmation][:domain] %>
  DocumentRoot  <%= @node[:gilmation][:webroot] %>/current
  <Directory <%= @node[:gilmation][:webroot] %>/current>
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

