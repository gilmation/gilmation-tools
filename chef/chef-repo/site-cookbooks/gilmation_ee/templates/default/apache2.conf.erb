<VirtualHost *>
  ServerName    gilmation.<% @node[:gilmation][:domain] %>
  DocumentRoot  <%= @node[:gilmation][:webroot] %>/current
  ErrorLog      /var/log/gilmation/apache_error.log
  <Directory <%= @node[:gilmation][:webroot] %>/current>
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

