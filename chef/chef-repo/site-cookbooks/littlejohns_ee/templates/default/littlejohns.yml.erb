project:
  name: gilmation
db:
  server: <%= @node[:mysql][:bind_address] %>
  name: <%= @node[:db][:name] %>
  user: <%= @node[:db][:user] %>
  password: <%= @node[:db][:password] %>
  admin_user: <%= @node[:db][:admin_user] %>
  admin_password: <%= @node[:db][:admin_password] %>
  backups_bucket_name: <%= @node[:db][:backups_bucket_name] %>
deploy:
  root: <%= @node[:littlejohns][:webroot] %>
  ee_system: <%= @node[:ee][:system_name] %>
  ee_dir:
  cache_dir: <%= @node[:ee][:cache_dir] %>
  config_file: <%= @node[:ee][:config_file] %>
  database_file: <%= @node[:ee][:database_file] %>
  extra_image_dirs: <%= @node[:ee][:extra_image_dirs] %>
image:
  backups_bucket_name: <%= @node[:image][:backups_bucket_name] %>
